    <!-- /include Header -->

    <!-- Main site -->
    <main id="site-main">
        <div class="container user-container">
            <div class="box-nav d-filex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fa-solid fa-user"></i></span>
                </a>
            </div>
        </div>

        <!-- Form Handling -->
        <div class="container">
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%-include('include/_show')%>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
